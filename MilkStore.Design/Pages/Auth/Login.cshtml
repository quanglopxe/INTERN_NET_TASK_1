@page
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - Cửa Hàng Sữa Tươi</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8fafc;
        }

        .bg-dairy {
            background: linear-gradient(to right,
                    rgba(255, 255, 255, 0.8),
                    rgba(255, 255, 255, 0.6)),
                url('https://images.pexels.com/photos/5946081/pexels-photo-5946081.jpeg');
            background-size: cover;
            background-position: center;
        }

        .overlay-gradient {
            background: linear-gradient(to right,
                    rgba(255, 255, 255, 0.1),
                    rgba(255, 255, 255, 0.1));
        }

        .dairy-gradient {
            background: linear-gradient(to right, #1e40af, #1d4ed8);
        }

        .form-container {
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
        }
    </style>
</head>

<body>
    <div class="min-h-screen flex">
        <!-- Left Section - Background Image -->
        <div class="hidden lg:flex lg:w-1/2 bg-dairy relative">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/50 to-blue-600/50"></div>
            <div class="relative z-10 flex items-center justify-center w-full">
                <div class="text-white text-center p-8">
                    <h1 class="text-4xl font-bold mb-4">Sữa Tươi Nguyên Chất</h1>
                    <p class="text-xl mb-8">Vì sức khỏe của gia đình bạn</p>
                    <div class="grid grid-cols-3 gap-12 max-w-2xl mx-auto">
                        <div class="text-center bg-white/90 p-6 rounded-xl shadow-lg">
                            <i class="fas fa-wine-bottle text-gray-700 text-4xl mb-4"></i>
                            <p class="font-medium text-gray-800">Sữa Tươi</p>
                        </div>
                        <div class="text-center bg-white/90 p-6 rounded-xl shadow-lg">
                            <i class="fas fa-leaf text-gray-700 text-4xl mb-4"></i>
                            <p class="font-medium text-gray-800">100% Tự Nhiên</p>
                        </div>
                        <div class="text-center bg-white/90 p-6 rounded-xl shadow-lg">
                            <i class="fas fa-certificate text-gray-700 text-4xl mb-4"></i>
                            <p class="font-medium text-gray-800">Chứng Nhận</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Section - Login Form -->
        <div class="w-full lg:w-1/2 flex items-center justify-center p-8">
            <div class="w-full max-w-md">
                <div class="text-center mb-10">
                    <img src="https://thumbs.dreamstime.com/b/fresh-milk-flat-minimalist-design-logo-338326084.jpg"
                        alt="Fresh Dairy Logo" class="h-16 mx-auto mb-4">
                    <h2 class="text-3xl font-bold text-gray-900">Chào Mừng Trở Lại!</h2>
                    <p class="text-gray-600 mt-2">Đăng nhập để quản lý tài khoản của bạn</p>
                </div>

                <form class="space-y-6">
                    <!-- Email Field -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Địa chỉ Email</label>
                        <div class="relative">
                            <input type="email" required class="w-full pl-12 pr-4 py-3.5 border border-gray-300 rounded-lg
                                          text-gray-900 text-sm placeholder-gray-400
                                          focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                                          transition duration-200" placeholder="Nhập email của bạn">
                            <i class="fas fa-envelope input-icon"></i>
                        </div>
                    </div>

                    <!-- Password Field -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Mật khẩu</label>
                        <div class="relative">
                            <input type="password" required class="w-full pl-12 pr-4 py-3.5 border border-gray-300 rounded-lg
                                          text-gray-900 text-sm placeholder-gray-400
                                          focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                                          transition duration-200" placeholder="Nhập mật khẩu">
                            <i class="fas fa-lock input-icon"></i>
                        </div>
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input type="checkbox" class="h-4 w-4 text-blue-600 rounded border-gray-300">
                            <label class="ml-2 text-sm text-gray-600">Ghi nhớ đăng nhập</label>
                        </div>
                        <a href="/Auth/ForgotPassword"
                            class="text-sm font-medium text-blue-600 hover:text-blue-500">Quên mật khẩu?</a>
                    </div>

                    <!-- Login Button -->
                    <button type="submit" class="w-full dairy-gradient text-white py-3.5 rounded-lg font-medium
                                   hover:opacity-90 transition duration-200 flex items-center justify-center">
                        Đăng nhập
                    </button>

                    <!-- Google Login -->
                    <div class="relative my-6">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-300"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-white text-gray-500">Hoặc đăng nhập với</span>
                        </div>
                    </div>

                    <a href="/google-login" class="w-full flex items-center justify-center px-4 py-3.5 
                              border border-gray-300 rounded-lg
                              text-sm font-medium text-gray-700 bg-white 
                              hover:bg-gray-50 transition duration-200">
                        <img src="https://www.google.com/favicon.ico" class="h-5 w-5 mr-2" alt="Google">
                        Đăng nhập bằng Google
                    </a>

                    <!-- Sign Up Link -->
                    <p class="text-center text-sm text-gray-600 mt-8">
                        Chưa có tài khoản?
                        <a href="/Auth/Register" class="font-medium text-blue-600 hover:text-blue-500">
                            Đăng ký ngay
                        </a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</body>

</html>