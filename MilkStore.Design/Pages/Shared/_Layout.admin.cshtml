<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - MilkStore</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body class="bg-gray-50">
    <div class="min-h-screen flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-gradient-to-b from-blue-800 to-blue-900 text-white">
            <div class="p-6 border-b border-blue-700">
                <div class="flex items-center space-x-3">
                    <img src="https://thumbs.dreamstime.com/b/fresh-milk-flat-minimalist-design-logo-338326084.jpg"
                        alt="Logo" class="w-8 h-8">
                    <span class="text-xl font-bold">MilkStore</span>
                </div>
            </div>

            <nav class="p-4">
                <div class="space-y-4">
                    <div class="text-xs text-blue-400 font-semibold uppercase tracking-wider">Tổng quan</div>

                    <a href="/admin/dashboard"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-blue-700 text-white">
                        <i class="fas fa-chart-line"></i>
                        <span>Dashboard</span>
                    </a>

                    <div class="text-xs text-blue-400 font-semibold uppercase tracking-wider mt-6">Quản lý</div>

                    <a href="/admin/users"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-users"></i>
                        <span>Người dùng</span>
                    </a>

                    <a href="/admin/products"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-box"></i>
                        <span>Sản phẩm</span>
                    </a>

                    <a href="/admin/orders"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Đơn hàng</span>
                    </a>

                    <a href="/admin/reviews"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-star"></i>
                        <span>Đánh giá</span>
                    </a>

                    <div class="text-xs text-blue-400 font-semibold uppercase tracking-wider mt-6">Cài đặt</div>

                    <a href="/admin/settings"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-cog"></i>
                        <span>Thiết lập</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Top Navigation -->
            <header class="bg-white border-b border-gray-200">
                <div class="flex items-center justify-between px-6 py-4">
                    <div class="flex items-center space-x-4">
                        <button class="text-gray-500 hover:text-gray-600">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                        <div class="relative">
                            <input type="text" placeholder="Tìm kiếm..."
                                class="w-64 pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                        </div>
                    </div>

                    <div class="flex items-center space-x-6">
                        <!-- Notifications -->
                        <div class="relative">
                            <button class="p-2 text-gray-500 hover:text-gray-600 hover:bg-gray-100 rounded-full">
                                <i class="fas fa-bell text-xl"></i>
                                <span class="absolute top-0 right-0 w-2 h-2 bg-red-500 rounded-full"></span>
                            </button>
                        </div>

                        <!-- Profile -->
                        <div class="flex items-center space-x-3">
                            <img src="https://via.placeholder.com/32" alt="Admin"
                                class="w-8 h-8 rounded-full ring-2 ring-blue-500">
                            <div>
                                <div class="text-sm font-medium text-gray-700">Admin</div>
                                <div class="text-xs text-gray-500">admin@milkstore.com</div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 p-6 overflow-auto">
                @RenderBody()
            </main>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>