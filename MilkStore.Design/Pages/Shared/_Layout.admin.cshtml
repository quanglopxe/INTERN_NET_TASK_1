<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - MilkStore</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body class="bg-gray-50">
    <div class="min-h-screen flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-gradient-to-b from-blue-800 to-blue-900 text-white">
            <div class="p-6 border-b border-blue-700">
                <div class="flex items-center space-x-3">
                    <img src="https://thumbs.dreamstime.com/b/fresh-milk-flat-minimalist-design-logo-338326084.jpg"
                        alt="Logo" class="w-8 h-8">
                    <span class="text-xl font-bold">MilkStore</span>
                </div>
            </div>

            <nav class="p-4">
                <div class="space-y-4">
                    <div class="text-xs text-blue-400 font-semibold uppercase tracking-wider">Tổng quan</div>

                    <a href="/admin/dashboard"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-blue-700 text-white">
                        <i class="fas fa-chart-line"></i>
                        <span>Dashboard</span>
                    </a>

                    <div class="text-xs text-blue-400 font-semibold uppercase tracking-wider mt-6">Quản lý</div>

                    <a href="/admin/users"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-users"></i>
                        <span>Người dùng</span>
                    </a>

                    <a href="/admin/product"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-box"></i>
                        <span>Sản phẩm</span>
                    </a>
                    <a href="/admin/category"
                       class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-folder"></i>
                        <span>Danh mục</span>
                    </a>
                    <a href="/admin/voucher"
                       class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fa-solid fa-ticket"></i>
                        <span>Mã giảm giá</span>
                    </a>

                    <a href="/admin/gift"
                       class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-gift"></i>
                        <span>Quà tặng</span>
                    </a>

                    <a href="/admin/ordergift"
                       class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-exchange-alt"></i>
                        <span>Đơn đổi quà</span>
                    </a>

                    <a href="/admin/orderdetailgift" 
                       class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-list-alt"></i>
                        <span>Chi tiết đổi quà</span>
                    </a>

                    <a href="/admin/order"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Đơn hàng</span>
                    </a>

                    <a href="/admin/reviews"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-star"></i>
                        <span>Đánh giá</span>
                    </a>
                    <a href="/admin/post"
                       class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-newspaper"></i>
                        <span>Bài báo</span>
                    </a>

                    <div class="text-xs text-blue-400 font-semibold uppercase tracking-wider mt-6">Cài đặt</div>

                    <a href="/admin/settings"
                        class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-blue-700/50 transition-colors">
                        <i class="fas fa-cog"></i>
                        <span>Thiết lập</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Top Navigation -->
            <header class="bg-white border-b border-gray-200">
                <div class="flex items-center justify-between px-6 py-4">
                    <div class="flex items-center space-x-4">
                        <button class="text-gray-500 hover:text-gray-600">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                        <div class="relative">
                            <input type="text" placeholder="Tìm kiếm..."
                                class="w-64 pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                        </div>
                    </div>

                    <div class="flex items-center space-x-6">
                        <!-- Notifications -->
                        <div class="relative">
                            <!-- Profile Button -->
                            <div class="relative">
                                <button id="profileButton" onclick="toggleProfileMenu()"
                                    class="flex items-center space-x-3 focus:outline-none">
                                    <img class="h-10 w-10 rounded-full object-cover border-2 border-gray-200"
                                        src="https://ui-avatars.com/api/?name=Admin&background=0D8ABC&color=fff"
                                        alt="Admin profile">
                                    <div class="hidden md:flex flex-col items-start">
                                        <span class="text-sm font-semibold text-gray-700">Admin Name</span>
                                        <span class="text-xs text-gray-500">admin@example.com</span>
                                    </div>
                                    <i class="fas fa-chevron-down text-gray-500 transition-transform duration-200"></i>
                                </button>

                                <!-- Dropdown Menu -->
                                <div id="profileMenu"
                                    class="hidden absolute right-0 mt-2 w-48 rounded-xl bg-white shadow-lg ring-1 ring-black ring-opacity-5">
                                    <div class="py-2">
                                        <!-- Profile Section -->
                                        <button onclick="openProfileModal()"
                                            class="w-full group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                            <i class="fas fa-user w-5 text-gray-400 group-hover:text-blue-500"></i>
                                            <span>Thông tin cá nhân</span>
                                        </button>

                                        <!-- Divider -->
                                        <div class="h-px bg-gray-200 my-2"></div>

                                        <!-- Logout Section -->
                                        <button onclick="logout()"
                                            class="w-full group flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                                            <i
                                                class="fas fa-sign-out-alt w-5 text-red-400 group-hover:text-red-600"></i>
                                            <span>Đăng xuất</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <script>
                            function toggleProfileMenu() {
                                const menu = document.getElementById('profileMenu');
                                const icon = document.querySelector('#profileButton .fa-chevron-down');

                                menu.classList.toggle('hidden');
                                icon.classList.toggle('rotate-180');
                            }

                            function closeProfileMenu() {
                                const menu = document.getElementById('profileMenu');
                                const icon = document.querySelector('#profileButton .fa-chevron-down');

                                menu.classList.add('hidden');
                                icon.classList.remove('rotate-180');
                            }

                            function openProfileModal() {
                                document.getElementById('profileModal').classList.remove('hidden');
                                closeProfileMenu();
                            }

                            // Close menu when clicking outside
                            document.addEventListener('click', function (event) {
                                const menu = document.getElementById('profileMenu');
                                const button = document.getElementById('profileButton');

                                if (!button.contains(event.target) && !menu.contains(event.target)) {
                                    closeProfileMenu();
                                }
                            });

                            function logout() {
                                window.location.href = '/auth/login';
                            }
                        </script>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 p-6 overflow-auto">
                @RenderBody()
            </main>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    @await Html.PartialAsync("~/Pages/Admin/Shared/_ProfileModal.cshtml")
</body>

</html>